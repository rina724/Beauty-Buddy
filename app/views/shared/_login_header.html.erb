<header class="navbar bg-base-100 bg-mint">
  <div class="flex-1">
    <%= link_to image_tag('logo2.png', class: "w-40 md:w-60 lg:w-64"), '/' %>
  </div>

  <!-- コスメ一覧 -->
  <div class="flex-none items-center">
    <%= link_to cosmetics_path, class: "btn btn-sm sm:btn-sm md:btn-md lg:btn-lg bg-cream btn-outline mr-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" 
          height="24px" viewBox="0 0 24 24" width="24px" fill="#5f6368">
          <path d="M0 0h24v24H0z" fill="none"/>
          <path d="M3 13h2v-2H3v2zm0 4h2v-2H3v2zm0-8h2V7H3v2zm4 4h14v-2H7v2zm0 4h14v-2H7v2zM7 7v2h14V7H7z"/>
        </svg>
        cosme_index
    <% end %>

  <!-- カレンダー機能 -->
    <%= link_to daily_reports_path, class: "btn btn-sm sm:btn-sm md:btn-md lg:btn-lg bg-cream btn-outline mr-4" do %>
      <svg xmlns="http://www.w3.org/2000/svg" 
        enable-background="new 0 0 24 24" 
        height="24px" viewBox="0 0 24 24" 
        width="24px" fill="#5f6368"><g><rect fill="none" height="24" width="24"/></g><g>
        <path d="M19,4h-1V2h-2v2H8V2H6v2H5C3.89,4,3.01,4.9,3.01,6L3,20c0,1.1,0.89,2,2,2h14c1.1,0,2-0.9,2-2V6C21,4.9,20.1,4,19,4z M19,20 H5V10h14V20z M9,14H7v-2h2V14z M13,14h-2v-2h2V14z M17,14h-2v-2h2V14z M9,18H7v-2h2V18z M13,18h-2v-2h2V18z M17,18h-2v-2h2V18z"/></g>
      </svg>
      calendar
    <% end %>
  </div>

  <!-- アバター画像 -->
  <div class="flex-none">
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
        <div class="w-15 rounded-full">
          <%= image_tag current_user.avatar_url, class: 'w-12 h-12 object-cover rounded-full', size: '48x48', alt: 'ユーザーアイコン' %>
        </div>
      </div>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow bg-mint items-center gap-1">
            <li>
              <%= link_to 'Profile', profiles_path, class: 'btn btn-sm sm:btn-sm md:btn-md bg-cream btn-outline min-w-24'%>
            </li>
            <li>
              <%= link_to 'Settings', user_path(current_user), class: 'btn btn-sm sm:btn-sm md:btn-md bg-cream btn-outline min-w-24'%>
            </li>
            <li>
              <%= link_to 'Mycosme', mycosmetics_path, class: 'btn btn-sm sm:btn-sm md:btn-md bg-cream btn-outline min-w-24'%>
            </li>
            <li>
              <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete } , class: 'btn btn-sm sm:btn-sm md:btn-md bg-cream btn-outline min-w-24'%>
            </li>
        </ul>
      </div>
    </div>
  </div>
</header>
<div class="bg-cream wrap p-7">
  <div class="flex-col items-center">
  <h1 class="font-gen text-3xl md:text-4xl p-5 text-center"><%= t('.title') %></h1>
    <div class="card bg-base-100 flex items-center">

      <div class="card-body text-center">
        <h3><%= t(".name") %></h3>
        <p class="pb-5 font-bold text-lg md:text-xl lg:text-2xl">
          <%= @user.name %>
        </p>

        <h3><%= t(".email") %></h3>
        <p class="pb-5 font-bold text-lg md:text-xl lg:text-2xl">
          <%= @user.email %>
        </p>


        <h3><%= t(".avatar") %></h3>
        <div class="flex justify-center">
          <%= image_tag @user.avatar_url, size: '80x80', class: 'w-20 h-20 object-cover rounded-full', alt: 'アバターアイコン' %>
        </div>

        <div class="flex justify-center m-3 gap-3">
          <%= link_to t("helper.submit.edit"), edit_user_registration_path(current_user.id), class: "btn bg-beige btn-outline w-32 md:w-52" %>
          <%= link_to "パスワードの変更", '#', class: "btn bg-beige btn-outline  w-32 md:w-52" %>
        </div>
      </div>
    </div>
  </div>
</div>
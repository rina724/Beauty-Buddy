<div class="bg-cream wrap">
  <div class="flex-col items-center p-5">
  <h1 class="font-gen text-4xl p-3 text-center">化粧品詳細</h1>
    <div class="card md:card-side bg-base-100 flex items-center">
      <%= image_tag @cosmetic.image ,class: "size-56 p-3"%>
      <div class="card-body ">
        <h1 class="card-title">
          <%= @cosmetic.product_name %>
        </h1>
        <p>
          <%= link_to @cosmetic.category.name, '#' %>
        </p>
        <p>
          <%= link_to @cosmetic.brand.name, '#' %>
        </p>
        <p>
          <% @cosmetic.ingredients.each do |ingredient| %>
            <%= ingredient.name %>
          <% end %>
        </p>

      <% if @mycosmetic %>
        <h1 class="card-title pt-5">
          <%= "Mycosmetic" %>
        </h1>
        <p>
          現在利用しているか:  <%= @mycosmetic.usage_situation %>
        </p>
        <p>
          利用開始日: <%= @mycosmetic.starting_date %>
        </p>
        <p>
          利用時の問題: <%= @mycosmetic.problem %>
        </p>
        <p>
          メモ: <%= @mycosmetic.memo %>
        </p>
        <div class="flex justify-center m-3">
          <%= link_to "編集", edit_mycosmetic_path(@mycosmetic), class: "btn btn-wide bg-beige btn-outline" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
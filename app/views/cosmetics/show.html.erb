<div class="bg-cream">
  <div class="flex-col items-center p-5">
    <div class="card md:card-side bg-base-100 flex items-center">
      <%= image_tag @cosmetic.image ,class: "size-56 p-3"%>
      <div class="card-body ">
        <h1 class="card-title">
          <%= link_to @cosmetic.product_name %>
        </h1>
        <p>
          <%= link_to @cosmetic.category.name, '#' %>
        </p>
        <p>
          <%= link_to @cosmetic.brand.name, '#' %>
        </p>
        <p>
          <%= @cosmetic.amount %>
        </p>
        <p>
          <%= @cosmetic.ingredient %>
        </p>

        <h1 class="card-title pt-5">
          <%= "Mycosmetic" %>
        </h1>
          <p>
            <%= "利用状況" %>
          </p>
          <p>
            <%= "利用開始日" %>
          </p>
          <p>
            <%= "利用時の問題" %>
          </p>
          <p>
            <%= "メモ" %>
          </p>
          <div class="flex justify-center m-3">
            <button class="btn btn-wide bg-beige btn-outline">
              <%= link_to "編集", '#' %>
            </button>
          </div>
      </div>
    </div>
  </div>
</div>
<div class="bg-cream wrap p-7">
  <div class="flex-col items-center">
  <h1 class="font-gen text-3xl md:text-4xl p-5 text-center"><%= t('.title') %></h1>
    <div class="card bg-base-100 flex items-center p-3">
      <%= image_tag @cosmetic.image ,class: "size-56 p-3"%>
      <div class="card-body">
        <h1 class="card-title">
          <%= @cosmetic.product_name %>
        </h1>
        <p>
          <%= link_to @cosmetic.category.name, '#' %>
        </p>
        <p>
          <%= link_to @cosmetic.brand.name, '#' %>
        </p>
        <p>
          <% @cosmetic.ingredients.each do |ingredient| %>
            <%= ingredient.name %>
          <% end %>
        </p>

      <% if @mycosmetic %>
        <h1 class="card-title pt-5">
          <%= t(".mycosmetic") %>
        </h1>
        <p>
          <%= t('.usage_situation') %> <%= t("activerecord.attributes.mycosmetic.usage.#{@mycosmetic.usage_situation}") %>
        </p>
        <p>
          <%= t('.starting_date') %> <%= @mycosmetic.starting_date %>
        </p>
        <p>
          <%= t('.problem') %> <%= @mycosmetic.problem_i18n %>
        </p>
        <p>
          <%= t('.memo') %> <%= @mycosmetic.memo %>
        </p>
        <div class="flex justify-center p-3">
          <%= link_to t(".edit"), edit_mycosmetic_path(@mycosmetic), class: "btn btn-wide bg-beige btn-outline" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
<div class="bg-cream">
  <div class="flex-col card p-10">
    <h1 class="font-gen text-4xl p-3 text-center"><%= t('.title') %></h1>
    <div class="bg-base-100 m-4 items-center">
      <div class="card-body flex items-center">
        <div class="size-48 p-3">
          <%= image_tag @cosmetic.image, class: "object-contain w-full h-full"%>
        </div>
        <div class="ml-4">
          <h2 class="card-title">
            <%= @cosmetic.product_name %>
          </h2>
          <p>
            <%= @cosmetic.category.name %>
          </p>
          <p>
            <%= @cosmetic.brand.name %>
          </p>
        </div>
      </div>
    </div>
    <%= render 'mycosme_form', mycosmetic: @mycosmetic %>
  </div>
</div>